:root {
    /* Color Variables */
    --primary-color: #CC0000;
    --primary-hover: #b30000;
    --text-primary: #333;
    --text-secondary: #666;
    --background-primary: #f8f8f8;
    --background-secondary: #e6e6e6;
    --border-color: #e0e0e0;
    --success-color: #38a169;
    --error-color: #e53e3e;
    
    /* Spacing Variables */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 40px;
    
    /* Border Radius */
    --border-radius-sm: 4px;
    --border-radius-md: 6px;
    --border-radius-lg: 8px;
    
    /* Shadows */
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 12px rgba(0,0,0,0.1);
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    margin: 0;
    padding: 0;
    background: linear-gradient(135deg, var(--background-primary) 0%, var(--background-secondary) 100%);
    color: var(--text-primary);
}

#license-app {
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--spacing-lg);
}

.container {
    background-color: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    padding: var(--spacing-lg);
    border: 1px solid var(--border-color);
    margin-bottom: 0;
}

h2 {
    margin-top: 0;
    color: var(--primary-color);
    font-weight: 600;
    border-bottom: 2px solid var(--primary-color);
    padding-bottom: var(--spacing-sm);
}

.month-section {
    margin-bottom: var(--spacing-xl);
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-md);
    box-shadow: var(--shadow-sm);
}

.month-header {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-sm) 0;
    border-bottom: 2px solid var(--border-color);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
    color: var(--primary-color);
}

/* Updated Client Row Styles using TR */
.client-row {
    /* display: table-row; Implicit */
    border-bottom: 1px solid var(--border-color);
    /* transition: background-color 0.15s ease;  Updated below */
    background-color: white;
    vertical-align: middle; /* Ensure vertical alignment */
    transition: background-color 0.2s ease-in-out; /* Smooth transition */
}

/* Apply zebra striping within each month section */
.month-section .client-table tbody .client-row:nth-child(odd) {
    background-color: #fbfbfb; /* Light color for odd rows */
}
.month-section .client-table tbody .client-row:nth-child(even) {
    background-color: #ffffff; /* Default white for even */
}

.client-row:hover {
    background-color: #f0f0f0; /* Slightly darker hover */
    cursor: default;
}

/* Visual Feedback Classes */
.row-highlight-success {
    animation: highlight-success 1.5s ease-out;
}

.row-fade-out {
    opacity: 0;
    transition: opacity 0.5s ease-out;
}

@keyframes highlight-success {
    0% { background-color: #e6ffed; } /* Light green */
    70% { background-color: #e6ffed; } /* Hold highlight */
    100% { background-color: inherit; } /* Fade back to original (odd/even/hover) */
}

/* Keep checkbox wrapper and styles */
.checkbox-wrapper {
    /* width: 40px; Let table cell width control */
    padding-left: var(--spacing-md); /* Add padding if needed */
    display: flex;
    justify-content: center;
    align-items: center;
    /* margin-right: var(--spacing-sm); Removed */
}

.custom-checkbox {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--primary-color);
}

/* Styles for Edit/Delete Icons (within td-actions) */
.edit-icon,
.delete-icon {
    cursor: pointer;
    color: var(--primary-color);
    font-size: 16px;
    border: none;
    background: none;
    padding: 0;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    margin: 0 var(--spacing-xs); /* Add space around icons */
}

.client-row:hover .edit-icon,
.client-row:hover .delete-icon {
    opacity: 1;
}

.client-id { /* Now Opportunity ID -> use .td-opp-id */
    /* display: none; Hiding handled by column styles if needed */
}

/* Styles for the Restructured Totals Area */
.totals-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: var(--background-primary);
    padding: var(--spacing-md);
    margin-top: var(--spacing-xl); /* Add margin above */
    border-radius: var(--border-radius-md);
    border: 1px solid var(--border-color);
}

.totals-toggle {
    display: flex;
    gap: var(--spacing-md);
    /* Remove background/padding if handled by parent */
    background-color: transparent;
    padding: 0;
    margin: 0; 
    justify-content: flex-start; /* Align left */
}

.toggle-button {
    /* Keep existing styles, adjust padding/min-width if needed */
     padding: var(--spacing-sm) var(--spacing-lg);
     border: 2px solid var(--primary-color);
     border-radius: var(--border-radius-md);
     background-color: white;
     color: var(--primary-color);
     font-weight: 600;
     cursor: pointer;
     transition: all 0.2s ease;
     min-width: 150px;
}

.toggle-button.active {
    background-color: var(--primary-color);
    color: white;
}

.confirmed-total {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--primary-color);
    text-align: right;
}

/* --- Refactored Top Summary Section Layout --- */
.receipts-progress {
    /* Switch from Grid to Flexbox for equal width distribution */
    display: flex; 
    gap: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
    background-color: white; /* Keep background */
    padding: var(--spacing-lg); /* Keep padding */
    border-radius: var(--border-radius-lg); /* Keep border radius */
    border: 1px solid var(--border-color); /* Keep border */
    box-shadow: var(--shadow-sm); /* Keep shadow */
}

/* Style for all three boxes in the top summary */
.receipts-progress > .summary-box {
    flex: 1; /* Make all children take equal width */
    padding: var(--spacing-md);
    border-radius: var(--border-radius-md);
    background-color: var(--background-primary);
    border: 1px solid var(--border-color);
}

/* Specific styles for the new combined overview box */
#progress-overview {
    /* Add specific internal layout if needed */
}

#progress-overview h3 {
    margin-top: 0;
    color: var(--primary-color);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
    text-align: center;
}

/* Center main info text elements */
#progress-overview #receipts-info,
#progress-overview #remaining-info {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-sm);
    font-size: 0.95rem;
    text-align: center; 
}

/* Remove old progress-text flex styles */
/* #progress-overview .progress-text { ... removed ... } */

/* NEW: Styling for control groups using Flexbox */
.control-group {
    display: flex;
    align-items: center; /* Vertically center items */
    gap: 0.75rem; /* Space between items */
    margin-bottom: 0.75rem; /* Space below the group */
}

.goal-group {
    justify-content: space-between; /* Distribute items */
}

.pool-group {
    justify-content: flex-start; /* Align items to the start */
}

/* Optional: Push input/button away from label in pool group */
.pool-group span#pool-info-label {
     /* margin-right: auto; */ /* Remove or comment out if using min-width */
     color: var(--text-secondary); 
     font-size: 0.95rem;
}

#progress-overview #receipts-percentage {
    font-weight: bold;
    flex-shrink: 0; /* Prevent percentage shrinking */
}

/* Increase input width and center text */
#progress-overview #receipts-goal-input,
#progress-overview #total-pool-input {
    width: 70px; /* Increased width */
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    text-align: center; /* Centered text */
    flex-shrink: 0; /* Prevent inputs from shrinking */
}

#progress-overview #update-goal-btn,
#progress-overview #update-pool-btn {
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 1px solid var(--primary-color);
    background-color: white;
    color: var(--primary-color);
    border-radius: var(--border-radius-sm);
    cursor: pointer;
    font-size: 0.85rem;
    transition: background-color 0.2s ease, color 0.2s ease;
    white-space: nowrap; /* Prevent button text wrapping */
    flex-shrink: 0; /* Prevent buttons from shrinking */
}

#progress-overview #update-goal-btn:hover,
#progress-overview #update-pool-btn:hover {
    background-color: var(--primary-hover);
    color: white;
}

#progress-overview hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: var(--spacing-md) 0;
}

/* Styles for the empty placeholder box - NOW KPI SECTION */
#kpi-stats-section {
    /* Remove placeholder styles */
    /* border: 1px dashed #aaa; */
    /* background-color: #fdfdfd; */
    /* min-height: 150px; */ 

    /* Keep general summary-box styles inherited */
    display: flex; /* Use flex for internal layout */
    flex-direction: column; /* Stack title and list */
    /* align-items: center; */ /* Remove if list items should be left-aligned */
    /* justify-content: center; */ /* Remove if content shouldn't be centered vertically */
}

#kpi-stats-section h4 {
    margin-top: 0;
    color: var(--primary-color);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
    text-align: center; 
}

.kpi-list {
    width: 100%; /* Take full width */
    padding: 0 var(--spacing-sm); /* Optional padding for list */
    box-sizing: border-box;
}

.kpi-list p {
    display: flex; /* Use flex to align label and value */
    justify-content: space-between; /* Push value to the right */
    margin-bottom: var(--spacing-sm);
    font-size: 0.95rem;
    color: var(--text-secondary);
}

.kpi-value {
    font-weight: bold;
    color: var(--text-primary);
    min-width: 80px; /* Ensure space for values */
    text-align: right;
}

/* Ensure Percentage Calculator keeps its specific styles */
.percentage-calculator h4 { /* Already has .summary-box class */
    margin-top: 0;
    color: var(--primary-color);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-md);
    text-align: center;
}

/* Keep percentage calculator internal styles */
.percentage-calculator .calc-input-row {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
}

.percentage-calculator label {
    flex-shrink: 0; /* Prevent label from shrinking */
    margin-bottom: 0; /* Remove default bottom margin */
}

.percentage-calculator input[type="number"] {
    flex-grow: 1; /* Allow input to take remaining space */
    width: auto; /* Override default 100% width */
    padding: var(--spacing-xs) var(--spacing-sm); /* Smaller padding */
    font-size: 0.9rem;
}

.calculator-results {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.calculator-results div {
    margin-bottom: var(--spacing-xs);
    display: flex;
    justify-content: space-between; /* Align label and value */
}

.calculator-results span {
    font-weight: 600;
    color: var(--text-primary);
    min-width: 50px; /* Ensure some space for value */
    text-align: right;
}

/* --- END Calculator Styles --- */

.checked {
    /* Styles applied directly to tr.checked now */
}

.completion-status {
    margin-top: var(--spacing-lg);
    padding: var(--spacing-md);
    border-radius: var(--border-radius-md);
    background-color: #f0fff4;
    color: var(--success-color);
    font-weight: 500;
    text-align: center;
    border: 1px solid #c6f6d5;
}

.add-section {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-lg);
    background-color: var(--background-primary);
    border: 1px dashed var(--primary-color);
}

.add-section h3 {
    margin-top: 0;
    color: var(--primary-color);
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.form-field {
    display: flex;
    flex-direction: column;
}

label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 500;
    color: var(--text-secondary);
}

input, select {
    width: 100%;
    padding: var(--spacing-sm);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    box-sizing: border-box;
    color: #333; /* Ensure text is visible */
}

input:focus, select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(204, 0, 0, 0.2);
}

.button-row {
    display: flex;
    justify-content: flex-end;
    gap: var(--spacing-sm);
}

button {
    padding: var(--spacing-sm) var(--spacing-md);
    border: none;
    border-radius: var(--border-radius-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.add-btn {
    background-color: var(--primary-color);
    color: white;
}

.add-btn:hover {
    background-color: var(--primary-hover);
}

.cancel-btn {
    background-color: var(--background-primary);
    color: var(--text-secondary);
}

.cancel-btn:hover {
    background-color: var(--background-secondary);
}

.sync-button {
    background-color: var(--primary-color);
    color: white;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--border-radius-sm);
    cursor: pointer;
    display: inline-block;
    margin-bottom: var(--spacing-lg);
    border: none;
    font-weight: 600;
}

.sync-button:hover {
    background-color: var(--primary-hover);
}

.sync-message {
    display: inline-block;
    margin-left: var(--spacing-sm);
    color: var(--success-color);
}

@media (max-width: 768px) {
    .client-info {
        flex-direction: column;
    }
    .client-date, .client-amount {
        margin-top: var(--spacing-xs);
    }
    .client-amount {
        text-align: left;
    }
    .form-grid {
        grid-template-columns: 1fr;
    }
}

#backup-options {
    margin-bottom: 20px;
    display: flex;
    gap: 10px;
}

#backup-info {
    margin-bottom: 10px;
    font-size: 0.8em;
    color: var(--text-secondary);
}

#auto-save-indicator {
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 5px 10px;
    background: rgba(56, 161, 105, 0.9);
    color: white;
    border-radius: 4px;
    font-size: 12px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1000;
}

.info-badge {
    display: inline-block;
    background: #eee;
    padding: 2px 6px;
    border-radius: 10px;
    font-size: 0.8em;
    margin-left: 5px;
}

.empty-state {
    text-align: center;
    padding: 40px 20px;
    background-color: var(--background-primary);
    border-radius: var(--border-radius-lg);
    margin-bottom: var(--spacing-xl);
}

.empty-icon {
    font-size: 48px;
    margin-bottom: 10px;
}

.empty-state h3 {
    margin: 10px 0;
    color: var(--primary-color);
}

.empty-state p {
    color: var(--text-secondary);
}

.total-accounts-editor {
    display: flex;
    align-items: center;
    margin-top: var(--spacing-xs);
    gap: var(--spacing-xs);
}

.total-accounts-editor input {
    width: 60px;
    padding: 2px 5px;
    text-align: center;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    font-size: 0.9rem;
}

.total-accounts-editor button {
    padding: 2px 6px;
    font-size: 0.8rem;
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: var(--border-radius-sm);
    cursor: pointer;
}

.edit-icon {
    cursor: pointer;
    color: var(--primary-color);
    margin-left: var(--spacing-xs);
    font-size: 14px; /* Reduce font size */
    visibility: visible; 
    opacity: 1;
    width: 20px; /* Fixed width */
    height: 20px; /* Fixed height */
    padding: 0; /* Remove padding */
    border: none;
    background: none;
}

.client-row:hover .edit-icon {
    opacity: 0.8; /* Just change opacity on hover instead of visibility */
}

.row-actions {
    display: flex;
    align-items: center;
    gap: 2px; /* Reduce spacing between buttons */
    width: 44px; /* Fixed width to match header */
    justify-content: flex-end;
}

.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background */
    display: flex; /* Use flexbox for centering */
    justify-content: center; /* Center horizontally */
    align-items: center; /* Center vertically */
    z-index: 1000; /* Ensure it's on top */
    display: none; /* Initially hidden - controlled by JS */
}

.modal {
    background: white;
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-lg);
    width: 90%;
    max-width: 600px;
    box-shadow: var(--shadow-md);
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
}

.modal-header h3 {
    margin: 0;
    color: var(--primary-color);
}

.modal-close {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--text-secondary);
}

.modal-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
}

.modal-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: var(--spacing-lg);
    gap: var(--spacing-sm);
}

